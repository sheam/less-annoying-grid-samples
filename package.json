{
    "name": "react-test-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.53",
        "@types/react-dom": "^16.9.8",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-scripts": "3.4.4",
        "typescript": "~4.0.5",
        "web-vitals": "^0.2.4"
    },
    "devDependencies": {
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "typescript-formatter": "^7.2.2"
    },
    "scripts": {
        "resetTSconfig": "echo {} > tsconfig.json && react-scripts start",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test .test.tsx",
        "format": "tsfmt -r",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": ["lint-staged"]
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": ["tsfmt -r"]
    }
}
